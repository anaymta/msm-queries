<h1>List of Directors</h1>

  <% Director.all.each do |a_director| %>
    <li>
      <%= a_director.name %> (<%= a_director.dob %>)
    </li>
  <% end %>

<table border="1">
  <tr>
    <th>ID</th>
    <th>Image</th>
    <th>Name</th>
    <th>Dob</th>
    <th></th>
  </tr>

    <% Director.all.each do |a_director| %>
    <tr>
      <td><%=a_director.id %></th>
      <td>
        <img src="<%=a_director.image%>" width = "100">
        </td>    
      <td><%=a_director.name%></th>
      <td><%=a_director.dob%></th>
      <td>
      <a href = "/directors/<%= a_director.id %>" >Show details </a>
      </th>
  </tr>
  <% end %>
</table>
